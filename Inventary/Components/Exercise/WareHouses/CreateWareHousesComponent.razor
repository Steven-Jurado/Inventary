@using Entities
@using Business
@inject NavigationManager NavManager
<div>
    <EditForm Model="OWareHouses">
        <div class="form-group">
            <label>Referencias:</label>
            <InputText @bind-Value="OWareHouses.WareHousesId" class="form-control" />
        </div>
        <div class="form-group">
            <label>Direccion:</label>
            <InputText @bind-Value="OWareHouses.WareHousesAddress" class="form-control" />
        </div>
        <div class="form-group">
            <label>Nombre De Bodega:</label>
            <InputText @bind-Value="OWareHouses.WareHousesName" class="form-control" />
        </div>
        <input type="button" value="Crear Bodega" class="btn btn-primary " @onclick="SaveWareHouses" />
    </EditForm>
</div>

@code {
    WareHousesEntity OWareHouses = new WareHousesEntity();

    private void SaveWareHouses()
    {
        B_WareHouses.CretateWareHouses(OWareHouses);
        NavManager.NavigateTo("warehouses/list");
    }
}
